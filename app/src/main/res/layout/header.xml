<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/tab_me_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/mzzdp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mzzdp_30"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_h1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/daka" />

            <ImageView
                android:id="@+id/user_h2"
                android:layout_width="@dimen/mzzdp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/erweima" />

            <ImageView
                android:id="@+id/user_h3"
                android:layout_width="@dimen/mzzdp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/erweima_saom" />

            <ImageView
                android:id="@+id/user_h4"
                android:layout_width="@dimen/mzzdp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/tiaoxingma" />

            <ImageView
                android:id="@+id/user_h5"
                android:layout_width="@dimen/mzzdp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/img_gift" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_dra_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10">

            <com.mazhanzhu.utils.view.MzzShapeImageView
                android:id="@+id/user_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                app:siv_border_color="@color/white"
                app:siv_border_size="2dp"
                app:siv_round_radius="33dp"
                app:siv_shape="circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/user_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:text="名字"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mzzsp_12" />

                <TextView
                    android:id="@+id/user_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:text="类别"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mzzsp_12" />

                <TextView
                    android:id="@+id/user_dsc"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:text="今天那啥，还挺好的"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mzzsp_12" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/main_dra_mystate"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/my_state" />
</LinearLayout>