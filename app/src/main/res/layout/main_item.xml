<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainitem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mzzdp_40"
    android:background="@drawable/ripple_main"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/mzzdp_13"
    android:paddingRight="@dimen/mzzdp_13">

    <ImageView
        android:id="@+id/mainitem_img"
        android:layout_width="@dimen/mzzdp_25"
        android:layout_height="@dimen/mzzdp_25"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/mainitem_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mzzdp_13"
        android:layout_weight="1"
        android:text="@string/hint_content"
        android:textColor="@color/white"
        android:textSize="@dimen/mzzsp_14" />

    <ImageView
        android:id="@+id/mainitem_red"
        android:layout_width="@dimen/mzzdp_10"
        android:layout_height="@dimen/mzzdp_10"
        android:background="@mipmap/red"
        android:visibility="invisible" />
</LinearLayout>